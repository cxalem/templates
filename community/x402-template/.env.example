# ==============================================================================
# SOLANA x402 PAYMENT TEMPLATE - ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env.local and customize the values for your deployment
# All variables have sensible defaults for quick development on Solana devnet
# ==============================================================================

# ------------------------------------------------------------------------------
# SOLANA RPC CONFIGURATION
# ------------------------------------------------------------------------------
# RPC endpoint for Solana blockchain connection
# Options:
#   - https://api.devnet.solana.com (default, for development)
#   - https://api.mainnet-beta.solana.com (for production)
#   - https://api.testnet.solana.com (for testing)
#   - Your own custom RPC URL (Helius, QuickNode, etc.)
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com

# ------------------------------------------------------------------------------
# NETWORK CONFIGURATION
# ------------------------------------------------------------------------------
# Which Solana network to use
# Options: solana-devnet | solana-mainnet-beta | solana-testnet | solana-localnet
NEXT_PUBLIC_NETWORK=solana-devnet

# ------------------------------------------------------------------------------
# USDC TOKEN CONFIGURATION
# ------------------------------------------------------------------------------
# USDC token mint address (different for each network)
# Default is USDC devnet mint. For mainnet, use: EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
NEXT_PUBLIC_USDC_DEVNET_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# USDC token decimals (6 for standard USDC)
NEXT_PUBLIC_USDC_DECIMALS=6

# ------------------------------------------------------------------------------
# PAYMENT CONFIGURATION
# ------------------------------------------------------------------------------
# Your treasury wallet address - this is where payments are sent
# IMPORTANT: Change this to your own wallet address!
# Get devnet USDC for testing at: https://faucet.circle.com/
NEXT_PUBLIC_TREASURY_ADDRESS=

# Payment amount in USD (will be converted to USDC with decimals)
# Example: 0.01 = $0.01 USD = 10000 USDC (with 6 decimals)
NEXT_PUBLIC_PAYMENT_AMOUNT_USD=0.01

# Payment description shown to users
NEXT_PUBLIC_PAYMENT_DESCRIPTION=Access to protected content

# Payment scheme - how strict the payment verification is
# Options: exact (must match exactly) | min (minimum amount)
NEXT_PUBLIC_PAYMENT_SCHEME=exact

# Maximum time in seconds before payment request expires
NEXT_PUBLIC_PAYMENT_TIMEOUT_SECONDS=60

# ------------------------------------------------------------------------------
# x402 FACILITATOR CONFIGURATION
# ------------------------------------------------------------------------------
# URL of the facilitator service (defaults to local API routes)
# For production, this would be your deployed facilitator URL
NEXT_PUBLIC_FACILITATOR_URL=http://localhost:3000/api/facilitator

# ------------------------------------------------------------------------------
# SESSION COOKIE CONFIGURATION
# ------------------------------------------------------------------------------
# Cookie name for storing payment verification status
NEXT_PUBLIC_COOKIE_NAME=solana_payment_verified

# Cookie max age in seconds (86400 = 24 hours)
NEXT_PUBLIC_COOKIE_MAX_AGE=86400
